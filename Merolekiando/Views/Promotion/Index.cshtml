<div class="modal fade" id="AddBannerModal" tabindex="-1" role="dialog" aria-bs-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Banner</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="FileForm" action="~/Promotion/AddBanner" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="white_card_body" id="BannerId">

                        <div class="row justify-content-center">

                            <div class="col-lg-12">
                                <div class="form-group mb-0">
                                    <input type="file" accept="image/*" onchange="readURL(this);" required name="Image" id="file" />
                                    <br />
                                    <img id="blah" src="#" style="image-rendering: pixelated;margin-left: 24%;margin-top: -5%;width: 110px;height: 60px;" alt="your image" />
                                </div>
                            </div>

                        </div>

                        <br />

                        <div class="row justify-content-center">

                            <div class="col-lg-12">
                                <div class="input-group common_date_picker">
                                    <input class="form-control" type="text" name="Name" placeholder="Name" required>
                                </div>
                            </div>

                        </div>

                        <br />

                        <div class="row justify-content-center">

                            <div class="col-lg-12">
                                <div class="form-group mb-0">
                                    <textarea type="text" class="form-control" name="Description" id="inputText" required placeholder="Description"></textarea>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>


