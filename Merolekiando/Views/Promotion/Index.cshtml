<div class="container-fluid plr_30 body_white_bg pt_30">
    <div class="row justify-content-center">
        <div class="col-12">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">Products</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Reported Products</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#Banners" type="button" role="tab" aria-controls="profile" aria-selected="false">Banners</button>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <div class="container-fluid plr_30 body_white_bg pt_30">
                        <div class="row justify-content-center">
                            <div class="col-12">
                                <div class="QA_section">
                                    <div class="QA_table">
                                        <table class="table lms_table_active">
                                            <thead>
                                                <tr>
                                                    <th scope="col">Product Image</th>
                                                    <th scope="col">Seller Name</th>
                                                    <th scope="col">Product</th>
                                                    <th scope="col">Description</th>
                                                    <th scope="col">Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in @ViewBag.Promotions)
                                                {
                                                    <tr>
                                                        <th> <img style="width: 50px; height: 50px;" class="img" src="@item.Image" alt=""> </th>
                                                        <th> @item.UserName</th>
                                                        <th> @item.Title</th>
                                                        <th> @item.Decription </th>
                                                        <td>
                                                            @if (@item.IsPromote == true)
                                                            {
                                                                <a href="#" style="background-color:grey" data-target="@item.Id" id="PromoteClick" class="status_btn">Demote</a>
                                                            }
                                                            else
                                                            {
                                                                <a href="#" data-target="@item.Id" id="PromoteClick" class="status_btn">Promote</a>
                                                            }


                                                            <a href="#" style="background-color:red" data-target="@item.Id" id="RejectClick" class="status_btn">Delete</a>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <div class="row justify-content-center">
                        <div class="col-12">
                            <div class="QA_section">
                                <div class="QA_table">

                                    <table class="table lms_table_active">
                                        <thead>
                                            <tr>
                                                <th scope="col">Product Image</th>
                                                <th scope="col">Seller Name</th>
                                                <th scope="col">Product</th>
                                                <th scope="col">Description</th>
                                                <th scope="col">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in @ViewBag.ReportedProducts)
                                            {
                                                <tr>
                                                    <th> <img style="width: 50px; height: 50px;" class="img" src="@item.Image" alt=""> </th>
                                                    <th> @item.UserName</th>
                                                    <th> @item.Title</th>
                                                    <th> @item.Decription </th>
                                                    <td>
                                                        <a href="#" data-target="@item.Id" id="IgnoreClick" class="status_btn">Ignore</a>
                                                        <a href="#" style="background-color:red" data-target="@item.Id" id="RejectClick" class="status_btn">Delete</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="Banners" role="tabpanel" aria-labelledby="profile-tab">
                    <div class="row justify-content-center">
                        <div class="col-12">
                            <div class="QA_section">
                                <div class="box_right d-flex lms_block">
                                    <br />
                                    <div class="add_button ms-2">
                                        <a href="#" data-bs-toggle="modal" data-bs-target="#AddBannerModal" class="btn_1">Add New</a>
                                    </div>
                                </div>
                                <div class="QA_table">
                                    <div class="QA_table">

                                        <table class="table lms_table_active">
                                            <thead>
                                                <tr>
                                                    <th scope="col">Image</th>
                                                    <th scope="col">Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in @ViewBag.Bannerdata)
                                                {
                                                    <tr>
                                                        <th scope="row"> <img style="width: 50px; height: 50px;" class="img" src="@item.Image" alt=""> </th>
                                                        <td>
                                                            <a href="#" style="background-color:red" data-target="@item.Id" id="DeleteBanner" class="status_btn">Delete</a>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

