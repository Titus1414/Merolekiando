        <div class="preview-area">
            <ul>
                @foreach (var item in @Model.ProdImages)
                {
                    var baseur = Methods.baseurl;
                    <li><img src="@baseur@item.Image" width="100px" data-target="@item.Id"><div class="content"><i class="far fa-trash-alt"></i></div></li>
